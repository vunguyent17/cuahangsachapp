<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuaHangSach.TaiKhoan.MH_ChinhSuaTaiKhoan"
             Title="Chỉnh sửa thông tin tài khoản">
    <ContentPage.Content>
        <StackLayout Margin="10, 20">
            <Label Text="Họ tên" />
            <Entry x:Name="txtTenNguoiDung" Keyboard="Text"/>
            <Label Text="Email" />
            <Entry x:Name="txtEmail" Keyboard="Text"/>
            <Label Text="Nhập mật khẩu hiện tại" />
            <Entry x:Name="txtMatKhau" Keyboard="Text" IsPassword="True" />
            <Button x:Name="btnLuu" Text="Lưu thông tin" Clicked="btnLuu_Clicked" Margin="0, 10, 0, 5"/>
            <Button x:Name="btnDenTrangDoiMatKhau" Text="Đến trang Đổi mật khẩu" Clicked="btnDenTrangDoiMatKhau_Clicked"
                    BackgroundColor="White"
                TextColor="{DynamicResource PrimaryColor}"
                BorderWidth="1.5"
                BorderColor="{DynamicResource PrimaryColor}" Margin="0, 5, 0, 10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>